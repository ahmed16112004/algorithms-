def count_beautiful_permutations(n, k):
  """
  Calculates the number of permutations of size n with exactly k beautiful points.

  Args:
      n: The size of the permutation.
      k: The desired number of beautiful points.

  Returns:
      The number of permutations with k beautiful points.
  """

  if n == 0:
    return 1 if k == 0 else 0
  if k < 0 or k > n:
    return 0

  dp = [[0] * (k + 1) for _ in range(n + 1)]

  for i in range(1, n + 1):
    for j in range(k + 1):

      if i == j:
        dp[i][j] = i * dp[i - 1][j - 1]
      else:

        dp[i][j] = (n - 1) * dp[i - 1][j]

  return dp[n][k]


n, k = map(int, input().split())

result = count_beautiful_permutations(n, k)
print(result)
